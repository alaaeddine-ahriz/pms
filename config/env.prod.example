# =============================================================================
# CONFIGURATION PRODUCTION
# Copiez ce fichier vers .env.prod
# ⚠️  ATTENTION: Changez TOUS les mots de passe et clés secrètes ⚠️
# =============================================================================

ENVIRONMENT=production

# =============================================================================
# BASE DE DONNÉES PRODUCTION
# ⚠️  Changez les identifiants de base de données
# =============================================================================
DATABASE_URL=postgresql://prod_user:CHANGE_THIS_SECURE_PASSWORD@localhost:5432/pms_incendie_prod

# =============================================================================
# SÉCURITÉ PRODUCTION
# ⚠️  CRITICAL: Changez la SECRET_KEY par une clé sécurisée
# =============================================================================
SECRET_KEY=MUST-BE-CHANGED-TO-SECURE-RANDOM-STRING-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# SERVEUR PRODUCTION
# =============================================================================
HOST=0.0.0.0
PORT=80
RELOAD=false
DEBUG=false

# =============================================================================
# API PRODUCTION
# =============================================================================
PROJECT_NAME=PMS Protection Incendie
VERSION=1.0.0
API_V1_PREFIX=/api/v1
ENABLE_DOCS=false
ENABLE_REDOC=false

# =============================================================================
# UPLOAD PRODUCTION
# =============================================================================
UPLOAD_DIR=/var/pms/uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# PAGINATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# CORS PRODUCTION (Restreint aux domaines autorisés)
# ⚠️  Changez par vos vrais domaines
# =============================================================================
CORS_ORIGINS=https:/www.example.com (TODO)

# =============================================================================
# LOGGING PRODUCTION
# =============================================================================
LOG_LEVEL=WARNING 