# =============================================================================
# CONFIGURATION DÉVELOPPEMENT
# Copiez ce fichier vers .env.dev
# =============================================================================

ENVIRONMENT=development

# =============================================================================
# BASE DE DONNÉES DÉVELOPPEMENT
# =============================================================================
DATABASE_URL=postgresql://dev_user:dev_pass123@localhost:5433/pms_incendie_dev

# =============================================================================
# SÉCURITÉ (Relaxée pour le développement)
# =============================================================================
SECRET_KEY=dev-secret-key-not-for-production-use-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVEUR DÉVELOPPEMENT
# =============================================================================
HOST=127.0.0.1
PORT=8000
RELOAD=true
DEBUG=true

# =============================================================================
# API DÉVELOPPEMENT
# =============================================================================
PROJECT_NAME=PMS Protection Incendie (DEV)
VERSION=1.0.0-dev
API_V1_PREFIX=/api/v1
ENABLE_DOCS=true
ENABLE_REDOC=true

# =============================================================================
# UPLOAD
# =============================================================================
UPLOAD_DIR=uploads/dev
MAX_FILE_SIZE=10485760

# =============================================================================
# PAGINATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# CORS DÉVELOPPEMENT (Ouvert)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# =============================================================================
# LOGGING DÉVELOPPEMENT
# =============================================================================
LOG_LEVEL=DEBUG 